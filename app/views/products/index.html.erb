<h1>Productos</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th>Tienda</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nombre %></td>
        <td><%= product.precio %></td>
        <td><%= product.cantidad %></td>
        <td><%= product.tiend.email %></td>
        <td><%= link_to 'Ver', product_path(product) %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, data:{turbo_method: :delete}%></td>
        <%= link_to 'Ver Mis Productos', product_path(product) %>
      </tr>
      
    <% end %>
  </tbody>
</table>

