<h1>New Product</h1>

<%= form_with(model: @product, url: products_path) do |form| %>
  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :precio %>
    <%= form.number_field :precio %>
  </div>

  <div>
    <%= form.label :cost_precio %>
    <%= form.number_field :cost_precio %>
  </div>

  <div>
    <%= form.label :cantidad %>
    <%= form.number_field :cantidad %>
  </div>

  <div>
    <%= form.label :tiend_id %>
    <%= form.collection_select :tiend_id, Tiend.all, :id, :email %>
  </div>

  <%= form.submit %>
<% end %>
