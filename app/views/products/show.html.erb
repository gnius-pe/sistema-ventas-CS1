
<%= form_with(url: @products_path, method: "get") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Buscar por nombre" %>
  <%= submit_tag "Buscar" %>
<% end %>
<h1>Productos</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Cantidad</th>
      <th>Tienda</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  
    <% @products.each do |produ| %>
      <tr>
        <td><%= produ.nombre %></td>
        <td><%= produ.precio %></td>
        <td><%= produ.cantidad %></td>
        <td><%= produ.tiend.email %></td>
        <td><%= link_to 'Ver', product_path(produ) %></td>
        <td><%= link_to 'Editar', edit_product_path(produ) %></td>
        <td><%= link_to 'Eliminar', produ, data:{turbo_method: :delete}%></td>
        
      </tr>
      
    <% end %>
  </tbody>
</table>

<%= link_to 'Volver', products_path %>
