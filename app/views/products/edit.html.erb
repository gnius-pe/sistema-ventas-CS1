<h1>Editar Producto</h1>

<%= form_with(model: @product, local: true) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibieron que este producto se guarde:</h2>

      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :precio %>
    <%= form.text_field :precio %>
  </div>

  <div>
    <%= form.label :cantidad %>
    <%= form.number_field :cantidad %>
  </div>

  <!-- Si deseas permitir al usuario cambiar la tienda a la que pertenece el producto -->
  <div>
    <%= form.label :tiend_id, "Tienda" %>
    <%= form.collection_select :tiend_id, Tiend.all, :id, :email %>
  </div>

  <div>
    <%= form.submit "Actualizar Producto" %>
  </div>
<% end %>

<%= link_to 'Cancelar', products_path %>
